<%- layout("/layout/boilerplate") %>

    <div class="container">
        <div class="filter-container">

            <div class="filters-wrapper" id="filtersWrapper">
                <div class="filter-item"><i class="fa-solid fa-fire"></i>
                    <p>Trending</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-igloo"></i>
                    <p>Domes</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-mug-saucer"></i>
                    <p>Bed & Breakfast</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-city"></i>
                    <p>Top Cities</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-mountain"></i>
                    <p>Mountains</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-sailboat"></i>
                    <p>Boats</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-box"></i>
                    <p>Container</p>
                </div>
                <div class="filter-item"><i class="fa-brands fa-fort-awesome"></i>
                    <p>Castles</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-film"></i>
                    <p>Frames</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-mountain-sun"></i>
                    <p>Mountain Sun</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-house-crack"></i>
                    <p>Earth Homes</p>
                </div>
                <div class="filter-item"><i class="fa-regular fa-snowflake"></i>
                    <p>Artics</p>
                </div>
                <div class="filter-item"><i class="fa-solid fa-person-swimming"></i>
                    <p>Pools</p>
                </div>
            </div>

            <div class="tax-toggle">
                <div class="tax-switch">
                    <div class="form-check-reverse form-switch">
                        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Display taxes</label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <body style="margin-top: 100px !important;">
        <!-- <h3 class="text-center my-3">All Listings</h3> -->
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                <% for (const Listing of allListings) { %>
                    <a href="/listings/<%=Listing._id %>" class="link-list">
                        <div class="col">
                            <div class="card h-100">
                                <img style="height: 20rem;" src="<%=Listing.image.url %>" class="card-img-top"
                                    alt="Listing_image">
                                <div class="card-img-overlay"></div>
                                <div class="card-body d-flex flex-column">
                                    <p class="card-text flex-grow-1">
                                        <b style="color: #212529;">
                                            <%=Listing.title %>
                                        </b>
                                        <br>
                                    <p style="color: #6a6a6a;">
                                        <%=Listing.description %>
                                    </p>
                                    <div style="color: #212529;">
                                        &#8377;<%=Listing.price.toLocaleString("en-IN") %>/ night
                                            <i class="tex_info">&nbsp; +18% GST</i>

                                    </div>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </a>
                    <% } %>
            </div>
        </div>
    </body>
