<% if (successMsg && successMsg.length) { %>
    <div class=" flash-message z-3 alert alert-success alert-dismissible fade show d-flex align-items-center col-6 offset-3"
        role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> <!-- Bootstrap icon -->
        <span>
            <%= successMsg %>
        </span>
        <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if (errorMsg && errorMsg.length) { %>
            <div class=" flash-message  alert alert-danger alert-dismissible fade show d-flex align-items-center col-6 offset-3"
                role="alert">
                <i class="bi bi-check-circle-fill me-2"></i> <!-- Bootstrap icon -->
                <span>
                    <%= errorMsg %>
                </span>
                <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>