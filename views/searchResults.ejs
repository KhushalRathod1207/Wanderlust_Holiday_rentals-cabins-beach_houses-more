<%- layout("/layout/boilerplate") %>


    <body style="margin-top: 100px !important;">
        <div class="container">
            <% if (results.length> 0) { %>
                <h3 class="text-center my-3">Search Results for "<%= query %>"</h3>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                    <% for (const Listing of results) { %>
                        <a href="/listings/<%= Listing._id %>" class="link-list"
                            style="text-decoration: none; color: inherit;">
                            <div class="col">
                                <div class="card h-100">
                                    <img style="height: 20rem; object-fit: cover;" src="<%= Listing.image.url %>"
                                        class="card-img-top" alt="Listing_image">
                                    <div class="card-img-overlay"></div>
                                    <div class="card-body d-flex flex-column">
                                        <p class="card-text flex-grow-1">
                                            <b style="color: #212529;">
                                                <%= Listing.title %>
                                            </b><br>
                                        <p style="color: #6a6a6a;">
                                            <%= Listing.description %>
                                        </p>
                                        <div style="color: #212529;">
                                            â‚¹<%= Listing.price.toLocaleString("en-IN") %>/ night
                                                <i class="tex_info" style="display: none;">&nbsp; +18% GST</i>
                                        </div>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <% } %>
                </div>
                <% } else { %>
                    <h3 class="text-center my-5 text-danger">No listings found for "<%= query %>" </h3>
                    <% } %>
        </div>
    </body>